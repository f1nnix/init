Xft.dpi: 96
Xft.antialias: true      
Xft.hinting: true
Xft.rgba: rgb 
Xft.autohint: false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

xterm*faceSize: 12
XTerm.vt100.renderFont: true
XTerm*scaleHeight: 0.9


